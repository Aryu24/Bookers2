<div class="body">
	<div class="container">

		<p id="notice">
	      <%= render 'layouts/notifications' %>
	    </p>

		<div class="row">
			<div class="col-md-6 col-md-offset-3">
				<h1>Editing Book</h1>
				<% if @book.errors.any? %>
					<div id="error_explanation" class="alert alert-danger">
						<h3>
				        	<%= pluralize(@book.errors.count, "error") %> prohibited this obj from being saved:
				    	</h3>
						<ul>
							<% @book.errors.full_messages.each do |message| %>
					 		<li><%= message %></li>
							<% end %>
						</ul>
					</div>
				<% end %>

				<%= form_for(@book) do |f| %>
					<div class="row field">
						<label>Title</label>
						<%= f.text_field :title, placeholder: "タイトルを入力", class: "col-xs-12" %>
					</div>
					<div class="row field">
						<label>Opinion</label>
						<%= f.text_area :body, placeholder: "感想を入力", class: "col-xs-12" %>
					</div>
					<div class="actions row field">
						<%= f.submit "Update Book", class: "col-xs-12 btn btn-primary" %>
					</div>
				<% end %>
				<%= link_to "Show", book_path(@book.id) %>
				<spam> | </spam>
				<%= link_to "Back", books_path %>
			</div>
		</div>
	</div>
</div>