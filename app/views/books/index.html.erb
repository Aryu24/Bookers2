<div class="body">
	<div class="container">

		<% if @book.errors.any? %>
					<div id="error_explanation" class="alert alert-danger">
						<h3>
				        	<%= pluralize(@book.errors.count, "error") %> prohibited this obj from being saved:
				    	</h3>
						<ul>
							<% @book.errors.full_messages.each do |message| %>
					 		<li><%= message %></li>
							<% end %>
						</ul>
					</div>
				<% end %>

		<div class="row">

			<%= render 'shared/list', user: @user, book: @book %>

			<div class="col-xs-9">
				<h2>Books</h2>
				<table class="table">
					<thead>
						<tr>
							<th></th>
							<th>Title</th>
							<th>Opinion</th>
						</tr>
					</thead>
					<% @books.each do |book| %>
					<tr>
						<td><%= link_to attachment_image_tag(book.user, :profile_image, fallback: "no_image.jpg", size:'50x50'), user_path(book.user_id) %>
						</td>
						<td><%= link_to book.title, book_path(book.id) %></td>
						<td><%= book.body %></td>
					</tr>
					<% end %>
				</table>
			</div>
		</div>
	</div>
</div>