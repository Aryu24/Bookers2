<div class="body">
	<div class="container">

		<p id="notice"></p>

		<div class="row">
			<% if flash[:notice] %>
	  			<p><%= flash[:notice] %></p>
			<% end %>

			<%= render 'shared/list', {user: @user, book: @book} %>

			<div class="col-xs-9">
				<h2>Book detail</h2>
				<table class="table table-striped">
					<thead>
						<tr>
							<th></th>
							<th><p>Title</p></th>
							<th><p>Opinion</p></th>
							<th></th>
							<th></th>
						</tr>
					</thead>
					<tr>
						<td>
							<%= link_to attachment_image_tag(@user, :profile_image, fallback: "no_image.jpg", size:'50x50'), user_path(@user) %><br>
							<p><%= link_to @user.name, user_path(@user) %></p>
						</td>
						<td><%= link_to @show_book.title, book_path(@show_book.id) %></td>
						<td><%= @show_book.body %></td>
						<% if @user.id == current_user.id %>
							<td><%= link_to "Edit", edit_book_path(@show_book.id), class: "btn-sm btn-success" %></td>
							<td><%= link_to "Destroy", book_path(@show_book.id), method: :delete, data: {confirm: "本当に消しますか？"}, class: "btn-sm btn-danger" %></td>
						<% end %>
					</tr>
				</table>
			</div>
		</div>
	</div>
</div>
