<div class="body">
	<div class="container">

		<p id="notice">
	      <%= render 'layouts/notifications' %>
	    </p>

		<div class="row">
			<%= render 'shared/list', user: @user, book: @book %>

			<div class="col-xs-9">
				<h2>Books</h2>
				<table class="table">
					<thead>
						<tr>
							<th></th>
							<th>Title</th>
							<th>Opinion</th>
						</tr>
					</thead>
					<% @user.books.each do |user_book| %>
					<tr>
						<td><%= link_to attachment_image_tag(@user, :profile_image, fallback: "no_image.jpg", size:'50x50'), user_path(@user) %></td>
						<td><%= link_to user_book.title, book_path(user_book.id) %></td>
						<td><%= user_book.body %></td>
					</tr>
					<% end %>
				</table>
			</div>
		</div>
	</div>
</div>