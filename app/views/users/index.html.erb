<div class="body">
	<div class="container">

		<p id="notice"></p>

		<div class="row">

			<%= render 'shared/list', user: @user, book: @book %>

			<div class="col-xs-9">
				<h2>Users</h2>
				<table class="table">
					<thead>
						<tr>
							<th>image</th>
							<th>name</th>
							<th></th>
						</tr>
					</thead>
					<% @users.each do |user| %>
					<tr>
						<td><%= attachment_image_tag user, :profile_image, fallback: "no_image.jpg", size:'50x50' %></td>
						<td><%= user.name %></td>
						<td><p><%= link_to "Show", user_path(user.id) %></p></td>
					</tr>
					<% end %>
				</table>
			</div>
		</div>
	</div>
</div>
