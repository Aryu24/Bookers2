<div class="body">
	<div class="container">
		<div class="row">
			<div class="col-xs-12">
				<h2>User info</h2>

				<% if @user.errors.any? %>
					<div id="error_explanation" class="alert alert-danger">
						<h3>
				        	<%= pluralize(@user.errors.count, "error") %> prohibited this obj from being saved:
				    	</h3>
						<ul>
							<% @user.errors.full_messages.each do |message| %>
					 		<li><%= message %></li>
							<% end %>
						</ul>
					</div>
				<% end %>

				<%= form_for(@user) do |f| %>
					<div class="field">
					<label>Name</label>
					<%= f.text_field :name, placeholder: "名前を入力" %><br>
					</div>
					<div class="field">
						<label>image</label><br>
						<%= f.attachment_field :profile_image %>
					</div>
					<div class="field">
						<label>Introduction</label><br>
						<%= f.text_area :introduction, placeholder: "自己紹介文を入力" %><br>
					</div>
					<%= f.submit "Update User" %>
				<% end %>
			</div>
		</div>
	</div>
</div>